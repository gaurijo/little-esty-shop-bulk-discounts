<%= render partial: 'shared/home_link', locals: {path: "/"} %>
<%= render partial: 'shared/merchant_search', locals: {path: "/merchants"} %>

<h1>Little Esty Shop Merchants</h1>

<% @merchants.each_with_index do |merchant, index|%>
<div id="merchant-<%= index %>">
